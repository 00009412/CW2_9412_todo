<%- include("layout-header") -%>

<div class="w-25 m-auto py-5">
  <h1 class="h3 border-bottom py-3 mb-3">Sign up</h1>

  <% if (messages.error) { %>
    <div class="alert alert-danger mb-3"><%= messages.error %></div>
  <% } %> 

  <form action="/users/signup" method="POST">
    <div class="mb-3">
      <label for="email" class="form-label">Enter your email</label>
      <input
        required
        type="email"
        name="email"
        class="form-control"
        id="email"
        placeholder="annur@ruzimov.com"
      />
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Create a new password</label>
      <input
        required
        type="password"
        name="password"
        class="form-control"
        id="password"
        placeholder="••••••"
      />
    </div>
    <button type="submit" class="btn btn-primary w-100">
      Sign up
    </button>
    <a href="/signin" class="btn btn-light w-100 my-3">Already have an account?</a>
  </form>
</div>

<%- include("layout-footer") -%>
